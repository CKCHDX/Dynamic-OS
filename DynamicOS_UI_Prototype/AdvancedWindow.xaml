<Window x:Class="Dynamic_Os.AdvancedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Mode"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        WindowStyle="None" 
        ResizeMode="NoResize"
        WindowState="Maximized">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Open Programs" Width="200" Height="40" Background="Green" Foreground="White" Margin="0,10,0,0"/>
            <Button Content="View Photos &amp; Videos" Width="200" Height="40" Background="Blue" Foreground="White" Margin="0,10,0,0"/>
            <Button Content="Browse Internet" Width="200" Height="40" Background="Purple" Foreground="White" Margin="0,10,0,0"/>
            <Button Content="Help" Width="200" Height="40" Background="Red" Foreground="White" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
