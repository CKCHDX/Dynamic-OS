<Page x:Class="Dynamic_Os.ManageAppsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a">
        <!-- Title -->
        <TextBlock Text="Manage Apps" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Foreground="White" 
                   FontSize="36" 
                   Margin="0,30,0,20" />

        <!-- Buttons -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="0,20">
            <Button Content="Add App" 
                    Width="250" Height="60" 
                    Margin="0,10" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="AddApp_Click" />
            <Button Content="Delete App" 
                    Width="250" Height="60" 
                    Margin="0,10" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="DeleteApp_Click" />
            <Button Content="Manage App" 
                    Width="250" Height="60" 
                    Margin="0,10" 
                    Style="{StaticResource ModernButtonStyle}" 
                    Click="ManageApp_Click" />
        </StackPanel>
    </Grid>
</Page>
