<Window x:Class="Dynamic_Os.Previews.SimpleModeMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Mode"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="Simple Mode" FontSize="24" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Open Programs" Width="200" Height="50" Margin="10" Background="#4CAF50" Foreground="White" />
            <Button Content="View Photos &amp; Videos" Width="200" Height="50" Margin="10" Background="#03A9F4" Foreground="White" />
            <Button Content="Browse Internet" Width="200" Height="50" Margin="10" Background="#9C27B0" Foreground="White" />
            <Button Content="Help" Width="200" Height="50" Margin="10" Background="#E91E63" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
