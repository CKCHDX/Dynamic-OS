<UserControl x:Class="Dynamic_Os.Previews.SlimModePreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1A1A1A"
             Height="400" Width="600">
    <Grid>
        <!-- Sidebar -->
        <StackPanel Width="200" Background="#2C2C2C" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <Button Content="🏠 Home" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="📱 Apps" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="⚙️ Settings" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="🛠 Task Manager" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="📂 File Manager" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="📊 Dashboard" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="🌐 Network" Style="{StaticResource ModernButtonStyle}" Margin="10" />
            <Button Content="🔌 Power Options" Style="{StaticResource ModernButtonStyle}" Margin="10" />
        </StackPanel>

        <!-- Main Content -->
        <Grid Margin="200,0,0,0" Background="#333333">
            <TextBlock Text="Slim Mode Preview - Welcome Screen" Foreground="White" FontSize="18"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</UserControl>
