<Window x:Class="Dynamic_Os.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        Width="500" Height="400"
        WindowStartupLocation="CenterScreen">
	<Grid x:Name="MainGrid">
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<!-- Label -->
			<TextBlock Text="Select Mode Difficulty"
                       Foreground="White"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

			<!-- Buttons -->
			<Button x:Name="SimpleModeButton"
				    Content="Simple Mode"
                    Width="200" Height="40"
                    Background="Green" Foreground="White"
                    Click="SimpleModeButton_Click"
                    Margin="0,0,0,10" />

			<Button x:Name="SlimModeButton"
				    Content="Slim Mode"
                    Width="200" Height="40"
                    Background="Blue" Foreground="White"
                    Click="SlimModeButton_Click"
                    Margin="0,0,0,10" />

			<Button x:Name="AdvancedModeButton"
				    Content="Advanced Mode"
                    Width="200" Height="40"
                    Background="Purple" Foreground="White"
                    Click="AdvancedModeButton_Click"
                    Margin="0,0,0,10" />

			<!-- Apply Button -->
			<Button x:Name="ApplyButton"
                    Content="Apply"
                    Width="200" Height="40"
                    Background="Orange" Foreground="White"
                    Click="ApplyButton_Click"
                    Margin="0,10,0,0" />
		</StackPanel>

		<!-- Loading Bar -->
		<ProgressBar x:Name="LoadingBar"
                     IsIndeterminate="False"
                     Width="300"
                     Height="20"
                     Visibility="Collapsed"
                     VerticalAlignment="Bottom"
                     Margin="0,0,0,30" />
	</Grid>
</Window>
